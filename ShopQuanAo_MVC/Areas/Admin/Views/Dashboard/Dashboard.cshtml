@model IEnumerable<ShopQuanAo_MVC.Models.AdminProductVM>
@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section id="products" class="mb-4">
    <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-3">
        <div>
            <h4 class="mb-1">Danh sách sản phẩm</h4>
        </div>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Create", "Dashboard", new { area = "Admin" })" class="btn btn-primary">
                + Thêm sản phẩm mới
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table align-middle table-hover mb-0">
                    <thead class="bg-light">
                        <tr class="text-muted">
                            <th style="width:100px;" class="ps-4">Hình</th>
                            <th>Mã SP</th>
                            <th>Tên sản phẩm</th>
                            <th>Danh mục</th>
                            <th>Giá bán</th>
                            <th>Tổng tồn</th>
                            <th class="text-end pe-4">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <img src="/@item.AnhDaiDien" class="thumb rounded border" style="width:60px; height:60px; object-fit:cover;" onerror="this.src='/assets/img/no-image.jpg'">
                                    </td>
                                    <td class="fw-bold text-secondary">@item.MaSP</td>
                                    <td class="fw-semibold">@item.TenSanPham</td>
                                    <td><span class="badge bg-info text-dark bg-opacity-10 border border-info">@item.TenDanhMuc</span></td>
                                    <td class="text-danger fw-bold">@item.GiaBan.ToString("N0")đ</td>
                                    <td>@item.TongTonKho</td>
                                    <td class="text-end pe-4">
                                        <a href="@Url.Action("Delete", "Dashboard", new { id = item.MaSP, area = "Admin" })"
                                           class="btn btn-sm btn-outline-danger"
                                           onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm @item.TenSanPham không?');">
                                            <i class="fas fa-trash"></i> Xóa
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5 text-muted">Chưa có sản phẩm nào.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
