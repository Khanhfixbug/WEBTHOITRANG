@model List<ShopQuanAo_MVC.Models.OrderVM>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Quản Lý Đơn Hàng";
}

<div class="x-breadcrumb__area base-bg">
    <div class="x-breadcrumb__bg w-img x-breadcrumb__overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-xxl-12">
                <div class="x-breadcrumb__content p-relative z-index-1">
                    <div class="x-breadcrumb__list">
                        <span><a href="@Url.Action("Index", "Home")">Trang chủ</a></span>
                        <span class="dvdr"><i class="icon-arrow-right"></i></span>
                        <span>Quản lý đơn hàng</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="x-cart-page pt-2 pb-70">
    <div class="container">
        @if (Model != null && Model.Count > 0)
        {
            <div class="row gutter-y-30 gx-5">
                @*DANH SÁCH ĐƠN HÀNG*@
                <div class="col-lg-3 col-xl-3">
                    <div class="list-group" id="order-list-tab" role="tablist">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var item = Model[i];
                            var activeClass = i == 0 ? "active" : ""; // Đơn đầu tiên active

                            // Màu sắc badge trạng thái
                            var badgeClass = "bg-secondary";
                            if (item.TrangThai == "Hoàn tất") { badgeClass = "bg-success"; }
                            else if (item.TrangThai == "Hủy") { badgeClass = "bg-danger"; }
                            else if (item.TrangThai == "Đang giao") { badgeClass = "bg-primary"; }
                            else if (item.TrangThai == "Chờ xác nhận") { badgeClass = "bg-warning text-dark"; }

                            <a class="list-group-item list-group-item-action @activeClass d-flex justify-content-between align-items-start order-tab-btn"
                               id="list-@item.MaDonHang-list"
                               data-bs-toggle="list"
                               href="#list-@item.MaDonHang"
                               role="tab">
                                <div class="ms-2 me-auto">
                                    <div class="fw-bold">@item.MaDonHang</div>
                                    <small class="text-muted">@item.NgayDat.ToString("dd/MM/yyyy HH:mm")</small>
                                </div>
                                <span class="badge @badgeClass rounded-pill">@item.TrangThai</span>
                            </a>
                        }
                    </div>
                </div>

                @*CHI TIẾT ĐƠN HÀNG*@
                <div class="col-lg-9 col-xl-9">
                    <div class="tab-content" id="nav-tabContent">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var item = Model[i];
                            var activeClass = i == 0 ? "show active" : "";

                            // Logic chọn màu cho trạng thái
                            var badgeClass = "bg-secondary";
                            if (item.TrangThai == "Hoàn tất") { badgeClass = "bg-success"; }
                            else if (item.TrangThai == "Hủy") { badgeClass = "bg-danger"; }
                            else if (item.TrangThai == "Đang giao") { badgeClass = "bg-primary"; }
                            else if (item.TrangThai == "Chờ xác nhận") { badgeClass = "bg-warning text-dark"; }

                            <div class="tab-pane fade @activeClass" id="list-@item.MaDonHang" role="tabpanel">
                                <div class="card shadow-sm border-0">
                                    @*MÃ ĐƠN HÀNG & TRẠNG THÁI*@
                                    <div class="card-header bg-white py-3">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h5 class="mb-0 text-primary">Đơn hàng: #@item.MaDonHang</h5>
                                            <span class="badge @badgeClass rounded-pill" style="font-size: 1rem; padding: 10px 20px;">
                                                @item.TrangThai
                                            </span>
                                        </div>
                                    </div>

                                    <div class="card-body p-0">
                                        @*THÔNG TIN NGƯỜI NHẬN*@
                                        <div class="p-3 border-bottom" style="background-color: #f8f9fa;">
                                            <div class="row text-muted" style="font-size: 0.9rem;">
                                                <div class="col-md-6 mb-2 mb-md-0">
                                                    <p class="mb-1">
                                                        <i class="fas fa-user me-2 text-secondary"></i>Người nhận:
                                                        <strong class="text-dark">@item.TenNguoiNhan</strong>
                                                    </p>
                                                    <p class="mb-0">
                                                        <i class="fas fa-phone me-2 text-secondary"></i>SĐT:
                                                        <strong class="text-dark">@item.SoDienThoai</strong>
                                                    </p>
                                                </div>
                                                <div class="col-md-6">
                                                    <p class="mb-1">
                                                        <i class="fas fa-map-marker-alt me-2 text-secondary"></i>Địa chỉ:
                                                        <strong class="text-dark">@item.DiaChiGiao</strong>
                                                    </p>

                                                    @* Chỉ hiện nếu có ghi chú *@
                                                    @if (!string.IsNullOrEmpty(item.GhiChu))
                                                    {
                                                        <p class="mb-0 text-danger">
                                                            <i class="fas fa-sticky-note me-2 text-secondary"></i>Ghi chú:
                                                            <span class="fst-italic">"@item.GhiChu"</span>
                                                        </p>
                                                    }
                                                </div>
                                            </div>
                                        </div>

                                        @*THÔNG TIN SẢN PHẨM*@
                                        <div class="table-responsive">
                                            <table class="table table-hover align-middle mb-0">
                                                <thead class="bg-light">
                                                    <tr>
                                                        <th class="ps-4">Sản phẩm</th>
                                                        <th class="text-center">Kích thước</th>
                                                        <th class="text-center">Giá</th>
                                                        <th class="text-center">Số lượng</th>
                                                        <th class="text-end pe-4">Thành tiền</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var detail in item.ChiTiet)
                                                    {
                                                        <tr>
                                                            <td class="ps-4">
                                                                <div class="d-flex align-items-center">
                                                                    <a href="@Url.Action("product_details", "Home", new { id = detail.MaSP })">
                                                                        <img src="/@detail.AnhDaiDien" alt="" style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;" class="me-3 border">
                                                                    </a>
                                                                    <div>
                                                                        <a href="@Url.Action("product_details", "Home", new { id = detail.MaSP })" class="text-decoration-none">
                                                                            <h6 class="mb-0 text-dark" style="font-size: 14px;">@detail.TenSanPham</h6>
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                            <td class="text-center"><span class="badge bg-light text-dark border">@detail.TenKichThuoc</span></td>
                                                            <td class="text-center">@detail.DonGia.ToString("N0")đ</td>
                                                            <td class="text-center">x @detail.SoLuong</td>
                                                            <td class="text-end pe-4">@detail.ThanhTien.ToString("N0")đ</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                    @*GIÁ ĐƠN HÀNG & NÚT XÁC NHẬN*@
                                    <div class="card-footer bg-white">
                                        <div class="row justify-content-end">
                                            <div class="col-md-5">
                                                @*Giá đơn hàng*@
                                                <table class="table table-borderless table-sm">
                                                    <tr>
                                                        <td class="text-muted">Tạm tính:</td>
                                                        <td class="text-end fw-bold">@item.TamTinh.ToString("N0")đ</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="text-muted">Phí vận chuyển:</td>
                                                        <td class="text-end fw-bold">@item.PhiVanChuyen.ToString("N0")đ</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="text-success">Giảm giá:</td>
                                                        <td class="text-end text-success fw-bold">-@item.GiamGia.ToString("N0")đ</td>
                                                    </tr>
                                                    <tr class="border-top">
                                                        <td class="pt-2"><span class="mb-0 fw-bold" style="font-size: 18px">Thành tiền:</span></td>
                                                        <td class="text-end pt-2"><span class="text-danger mb-0 fw-bold" style="font-size: 18px">@item.TongTien.ToString("N0")đ</span></td>
                                                    </tr>
                                                </table>

                                                @if (item.TrangThai == "Đang giao")
                                                {
                                                    <button class="btn btn-success w-100 mt-2 btn-confirm-received" data-id="@item.MaDonHang">
                                                        <i class="fas fa-check-circle me-2"></i>Đã nhận được hàng
                                                    </button>
                                                }
                                                else if (item.TrangThai == "Hoàn tất")
                                                {
                                                    <button class="btn btn-secondary w-100 mt-2" disabled>
                                                        Đơn hàng đã hoàn thành
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <img src="https://cdn-icons-png.flaticon.com/512/2038/2038854.png" width="100" class="mb-3" style="opacity: 0.5">
                <h4>Bạn chưa có đơn hàng nào!</h4>
                <p class="text-muted">Hãy dạo một vòng cửa hàng và chọn món đồ ưng ý nhé.</p>
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Mua sắm ngay</a>
            </div>
        }
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            // Xử lý nút "Đã nhận được hàng"
            $('.btn-confirm-received').click(function () {
                var btn = $(this);
                var maDH = btn.data('id');

                if (confirm('Bạn xác nhận đã nhận được đơn hàng ' + maDH + ' và muốn hoàn tất đơn hàng này?')) {
                    $.ajax({
                        url: '/Home/ConfirmReceived',
                        type: 'POST',
                        data: { maDonHang: maDH },
                        success: function (res) {
                            if (res.success) {
                                alert(res.message);
                                location.reload(); // Tải lại trang để cập nhật trạng thái
                            } else {
                                alert(res.message);
                            }
                        },
                        error: function () {
                            alert('Lỗi kết nối server.');
                        }
                    });
                }
            });
        });
    </script>
}
