@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
    ViewBag.Title = "Đăng Ký";
}

<style>
    .form-control {
        height: 45px !important;
        padding-left: 15px !important;
        display: flex !important;
        align-items: center !important;
    }
</style>

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card w-100 shadow-sm" style="max-width: 400px;">
        <div class="card-body">

            <div class="text-center mb-4">
                <img src="/assets/img/resourse/logo.png" alt="logo" class="img-fluid" style="width: 40px;">
                <h5 class="mt-2 text-danger fw-bold">Đăng ký</h5>
            </div>

            @* Hiển thị thông báo lỗi từ Controller nếu có *@
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form action="@Url.Action("register", "Home")" method="post">
                <div class="mb-3">
                    <input type="text" class="form-control" name="fullName" placeholder="Họ và tên" required value="@Request["fullName"]">
                </div>

                <div class="mb-3">
                    <input type="text" class="form-control" name="email" placeholder="Email" required value="@Request["email"]">
                </div>

                <div class="mb-3 position-relative">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Mật khẩu" required>
                    <span class="position-absolute top-50 end-0 translate-middle-y me-3" style="cursor:pointer;"
                          onclick="togglePass('password', this)">
                        <i class="fa-regular fa-eye"></i>
                    </span>
                </div>

                <div class="mb-3 position-relative">
                    <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Xác nhận mật khẩu" required>
                    <span class="position-absolute top-50 end-0 translate-middle-y me-3" style="cursor:pointer;"
                          onclick="togglePass('confirmPassword', this)">
                        <i class="fa-regular fa-eye"></i>
                    </span>
                </div>

                <button type="submit" class="btn btn-danger w-100">ĐĂNG KÝ</button>
            </form>

            <div class="text-center text-muted my-3 small">Hoặc đăng ký bằng</div>
            <div class="d-flex gap-2 mb-3">
                <button class="btn btn-outline-secondary w-50"><i class="fab fa-google me-1 text-danger"></i>Google</button>
                <button class="btn btn-outline-secondary w-50"><i class="fab fa-facebook-f me-1 text-primary"></i>Facebook</button>
            </div>

            <div class="text-center small">
                <span>Đã có tài khoản?</span>
                <a href="@Url.Action("login", "Home")" class="text-danger text-decoration-none ms-1">Đăng nhập</a>
            </div>

        </div>
    </div>
</div>

<script>
    // Hàm ẩn/hiện mật khẩu và đổi icon
    function togglePass(id, el) {
        var x = document.getElementById(id);
        var icon = el.querySelector('i');

        if (x.type === "password") {
            x.type = "text";
            icon.classList.remove('fa-eye');
            icon.classList.add('fa-eye-slash');
        } else {
            x.type = "password";
            icon.classList.remove('fa-eye-slash');
            icon.classList.add('fa-eye');
        }
    }
</script>
