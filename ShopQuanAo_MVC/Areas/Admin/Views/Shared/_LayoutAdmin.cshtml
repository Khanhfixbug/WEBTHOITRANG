<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title | Quản trị viên</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f6f7fb;
        }

        .sidebar {
            min-height: 100vh;
            background: #0b1f3a;
        }

            .sidebar .nav-link {
                color: rgba(255,255,255,.85);
                border-radius: 10px;
                padding: .65rem .85rem;
            }

                .sidebar .nav-link.active, .sidebar .nav-link:hover {
                    background: rgba(255,255,255,.12);
                    color: #fff;
                }

        .brand {
            color: #fff;
            font-weight: 700;
            letter-spacing: .4px;
        }

        .thumb {
            width: 54px;
            height: 54px;
            object-fit: cover;
            border-radius: 10px;
            border: 1px solid #e9ecef;
            background: #fff;
        }

        .card {
            border: 0;
            border-radius: 16px;
            box-shadow: 0 10px 28px rgba(9,30,66,.06);
        }

        .badge-soft {
            background: #eef2ff;
            color: #334155;
            border: 1px solid #e2e8f0;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-white border-bottom sticky-top">
        <div class="container-fluid">
            <button class="btn btn-outline-primary d-lg-none me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar">
                ☰
            </button>
            <a class="navbar-brand fw-bold" href="#">SELLER DASHBOARD</a>
            <div class="d-flex align-items-center gap-2">
                <span class="badge text-bg-primary">@Session["TenHienThi"]</span> <a href="@Url.Action("Logout", "Home", new { area = "" })" class="btn btn-sm btn-outline-secondary">Đăng xuất</a>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">

            <aside class="col-lg-2 d-none d-lg-block sidebar p-3">
                <div class="d-flex align-items-center gap-2 mb-4">
                    <div class="rounded-circle bg-white text-primary fw-bold d-flex align-items-center justify-content-center" style="width:38px;height:38px;">S</div>
                    <div>
                        <div class="brand">Giao diện người bán</div>
                        <div class="text-white-50 small">Quản trị cửa hàng</div>
                    </div>
                </div>

                <nav class="nav flex-column gap-1">
                    <a class="nav-link" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">📦 Bảng sản phẩm</a>
                    <a class="nav-link" href="@Url.Action("Orders", "Dashboard", new { area = "Admin" })">🧾 Đơn hàng</a>
                    <a class="nav-link" href="@Url.Action("Revenue", "Dashboard", new { area = "Admin" })">📈 Thống kê doanh thu</a>
                </nav>

                <hr class="border border-white border-opacity-25 my-4" />
            </aside>

            <div class="offcanvas offcanvas-start" tabindex="-1" id="mobileSidebar">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title">Menu</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
                </div>
                <div class="offcanvas-body">
                    <nav class="nav flex-column gap-1">
                        <a class="nav-link" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">📦 Bảng sản phẩm</a>
                        <a class="nav-link" href="@Url.Action("Orders", "Dashboard", new { area = "Admin" })">🧾 Đơn hàng</a>
                        <a class="nav-link" href="@Url.Action("Revenue", "Dashboard", new { area = "Admin" })">📈 Thống kê doanh thu</a>
                    </nav>
                </div>
            </div>

            <main class="col-lg-10 p-3 p-lg-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
